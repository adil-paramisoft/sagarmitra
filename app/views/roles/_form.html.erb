<%= form_for @role,:html=>{:class=>"form-horizontal"} do |f| %>
  <% if @role.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@role.errors.count, "error") %> prohibited this role from being saved:</h2>

      <ul>
      <% @role.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
<fieldset>

<!-- Text input-->
<div class="control-group">
  <label class="control-label" for="textinput">Name</label>
  <div class="controls">
        <%= f.text_field :name,:required=>"required" %>
    
  </div>
</div>

<!-- Textarea -->
<div class="control-group">
  <label class="control-label" for="textarea">Description</label>
  <div class="controls">                     
       <%= f.text_field :description,:required=>"required" %>
  </div>
</div>

<!-- Button -->
<div class="control-group">
  <label class="control-label" for="singlebutton"></label>
  <div class="controls">	
		<div class="btn-group">
			<%= f.submit "Submit",:class=>"btn btn-primary" %>
			<%= link_to 'All roles ',roles_path,:class=>"btn" %>
			<%= link_to 'cancel', new_role_path,:class=>"btn btn-danger" %>
	  	</div>
  </div>
</div>

</fieldset>
<% end %>