<div class="container-fluid">
  <div class="row-fluid">
    <div class="span3">

      <%=render :partial=> 'admin/sidebar'%>

    </div>
    <div class="span9">

      <% if can? :create, PlasticCollectionEvent %>
          <div style="float:left">
            <%= link_to  new_admin_role_path do %>
                <%=image_tag("/assets/netvibes.png", :border => 0) %>New role
            <%end%>
          </div>
      <%end%>


      <table class="table table-striped custab table-bordered ">
        <thead>
        <tr>

          <th>Name</th>
          <th>Description</th>


          <% if can? :create, PlasticCollectionEvent %>
              <th class="text-center">Actions</th>
          <% end%>

        </tr>
        </thead>
        <tr>


          <% @roles.each do |role| %>
            <tr>
              <td><%= role.name %></td>
              <td><%= role.description %></td>
              <% if can? :create, PlasticCollectionEvent %>
                  <td>

                    <%= link_to  admin_role_path(role) do %>
                        <i class="icon-folder-open"></i>Show
                    <%end%>
                    </br>
                    <%= link_to  edit_admin_role_path(role) do%>
                        <i class="icon-edit"></i>Edit
                    <%end%>
                    </br>
                    <%= link_to  admin_role_path(role), method: :delete, data: { confirm: 'Are you sure?' } do %>
                        <i class="icon-trash"></i>Del
                    <%end%>
                  </td>
                  </tr>
              <% end %>
        <% end %>




      </table>
    </div>
  </div>
</div>
