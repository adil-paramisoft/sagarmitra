<%= simple_form_for [:admin, @plastic_collection_source], :html => {:class => "form-horizontal"} do |f| %>
    <% if @plastic_collection_source.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@plastic_collection_source.errors.count, "error") %> prohibited this
            plastic_collection_source from being saved:</h2>

          <ul>
            <% @plastic_collection_source.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <fieldset>


      <!-- Text input-->
      <div class="control-group">
        <label class="control-label" for="textinput">Name</label>

        <div class="controls">
          <%= f.input :name, label: false %>
        </div>
      </div>

      <!-- Textarea -->
      <div class="control-group">
        <label class="control-label" for="textarea">Address</label>

        <div class="controls">
          <%= f.input :address, label: false %>
        </div>
      </div>

      <!-- Text input-->
      <div class="control-group">
        <label class="control-label" for="textinput">Contact person</label>

        <div class="controls">
          <%= f.input :contact_person, label: false %>

        </div>
      </div>

      <!-- Prepended text-->
      <div class="control-group">
        <label class="control-label" for="prependedtext">Phone no 1</label>

        <div class="controls">
          <div class="input-prepend">

            <%= f.input :phone_no_1, label: false %>

          </div>

        </div>
      </div>

      <!-- Prepended text-->
      <div class="control-group">
        <label class="control-label" for="prependedtext">Phone no 2</label>

        <div class="controls">
          <div class="input-prepend">

            <%= f.input :phone_no_2, label: false %>

          </div>

        </div>
      </div>

      <!-- Text input-->
      <div class="control-group">
        <label class="control-label" for="textinput">Website</label>

        <div class="controls">
          <%= f.input :website, label: false %>

        </div>
      </div>

      <!-- Text input-->
      <div class="control-group">
        <label class="control-label" for="textinput">Email</label>

        <div class="controls">
          <%= f.input :email, label: false %>

        </div>
      </div>

      <!-- Button -->

      <div class="control-group">
        <label class="control-label" for="singlebutton"></label>

        <div class="btn-group">

          <%= f.submit "Submit", :class => "btn btn-primary" %>
          <%= link_to 'All Plastic Collection Sources ', admin_plastic_collection_sources_path, :class => "btn" %>
          <%= link_to 'Clear', new_admin_plastic_collection_source_path, :class => "btn btn-danger" %>
        </div>
      </div>


    </fieldset>

<% end %>
