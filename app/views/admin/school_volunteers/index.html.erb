<div class="container-fluid">
  <div class="row-fluid">
    <div class="span3">

      <%= render :partial => 'admin/sidebar' %>

    </div>
    <div class="span9">

      <% if can? :create, PlasticCollectionEvent %>
          <div style="float:left">
            <%= link_to new_school_volunteer_path do %>
                <%= image_tag("/assets/netvibes.png", :border => 0) %>New school Volunteer
            <% end %>
          </div>
      <% end %>


      <table class="table table-striped custab table-bordered ">
        <thead>
        <tr>

          <th>School name</th>
          <th>School address</th>
          <th>School Type</th>
          <th>School medium</th>
          <th>Total students</th>
          <th>Volunteer</th>
          <th>Mobile</th>
          <th>Email</th>


          <% if can? :create, PlasticCollectionEvent %>
              <th class="text-center">Actions</th>
          <% end %>

        </tr>
        </thead>
        <tr>

          <%logger.info("----school volunteers index view--------")%>
          <%logger.info(@school_volunteers)%>
          <%logger.info("----school volunteers index vieww--------")%>
          <% @school_volunteers.each do |school_volunteer| %>
            <tr>
              <td><%= school_volunteer.school.name %></td>
              <td><%= school_volunteer.school.address %></td>
              <td><%= school_volunteer.school.school_type.name %></td>
              <td><%= school_volunteer.school.school_medium.name %></td>
              <td><%= school_volunteer.school.total_students %></td>
              <td><%= school_volunteer.name %></td>
              <td><%= school_volunteer.mobile %></td>
              <td><%= school_volunteer.email %></td>

              <% if can? :create, PlasticCollectionEvent %>
                  <td>

                    <%= link_to admin_school_volunteer_path(school_volunteer) do %>
                        <i class="icon-folder-open"></i>Show
                    <% end %>
                    </br>
                    <%= link_to edit_admin_school_volunteer_path(school_volunteer) do %>
                        <i class="icon-edit"></i>Edit
                    <% end %>
                    </br>
                    <%= link_to admin_school_volunteers_path(school_volunteer), method: :delete, data: {confirm: 'Are you sure?'} do %>
                        <i class="icon-trash"></i>Del
                    <% end %>
                  </td>
                  </tr>
              <% end %>
        <% end %>


      </table>
    </div>
  </div>
</div>
