<%= form_for [:admin, @presentation_type], :html => {:class => "form-horizontal"} do |f| %>
    <% if @presentation_type.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@presentation_type.errors.count, "error") %> prohibited this presentation_type from being
            saved:</h2>

          <ul>
            <% @presentation_type.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <fieldset>

      <!-- Text input-->
      <div class="control-group">
        <label class="control-label" for="textinput">Name</label>

        <div class="controls">
          <%= f.text_field :name, :required => "required" %>

        </div>
      </div>

      <!-- Textarea -->
      <div class="control-group">
        <label class="control-label" for="textarea">Description</label>

        <div class="controls">
          <%= f.text_area :description, :required => "required" %>
        </div>
      </div>

      <!-- Button -->
      <div class="control-group">
        <label class="control-label" for="singlebutton"></label>

        <div class="controls">
          <div class="btn-group">
            <%= f.submit "Submit", :class => "btn btn-primary" %>
            <%= link_to 'All Presentation types ', admin_presentation_types_path, :class => "btn" %>
            <%= link_to 'cancel', new_admin_presentation_type_path, :class => "btn btn-danger" %>
          </div>
        </div>
      </div>

    </fieldset>
<% end %>

