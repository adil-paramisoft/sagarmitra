<div class="container-fluid">
  <div class="row-fluid">
    <div class="span3">

      <%=render :partial=> 'admin/sidebar'%>

    </div>
    <div class="span9">

      <% if can? :create, PlasticCollectionEvent %>
          <div style="float:left">
            <%= link_to  new_admin_presentation_path do %>
                <%=image_tag("/assets/netvibes.png", :border => 0) %>New Presentation
            <%end%>
          </div>
      <%end%>


      <table class="table table-striped custab table-bordered ">
        <thead>
        <tr>

          <th>Presented by</th>
          <th>Date</th>
          <th>Audience count</th>
          <th>Presentation type</th>
          <th>School</th>
          <th>Followup volunteer</th>


          <% if can? :create, PlasticCollectionEvent %>
              <th class="text-center">Actions</th>
          <% end%>

        </tr>
        </thead>
        <tr>


          <% @presentations.each do |presentation| %>
            <tr>
              <td><%= presentation.presented_by %></td>
              <td><%= presentation.start_at %></td>
              <td><%= presentation.audience_count %></td>
              <td><%= presentation.presentation_type.name %></td>
              <td><%= presentation.school.name %></td>
              <td><%= presentation.followup_volunteer %></td>
              <% if can? :create, PlasticCollectionEvent %>
                  <td>

                    <%= link_to  admin_presentation_path(presentation) do %>
                        <i class="icon-folder-open"></i>Show
                    <%end%>
                    </br>
                    <%= link_to  edit_admin_presentation_path(presentation) do%>
                        <i class="icon-edit"></i>Edit
                    <%end%>
                    </br>
                    <%= link_to  admin_presentation_path(presentation), method: :delete, data: { confirm: 'Are you sure?' } do %>
                        <i class="icon-trash"></i>Del
                    <%end%>
                  </td>
                  </tr>
              <% end %>
        <% end %>




      </table>
    </div>






  </div>

</div>

