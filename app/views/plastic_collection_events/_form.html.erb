	<%= f.input :date, as: :datetime, start_year: Date.today.year,
	                              end_year: Date.today.year - 12, discard_day: false,
	                              order: [:day,:month, :year] %>
  </div>
  <div class="field">
    <%= f.input :quality_remark %><br>
  </div>
  <div class="field">
    <%= f.input :feedback %><br>
  </div>
 
  <div class="actions">
    <%= f.submit 'Save' %>
  </div>
