<% unless activity.trackable.nil? %>
    <div class="hero-unit">
      A <%= link_to activity.trackable.event_name, offline_event_path(activity.trackable_id)  %> Event was added to <%= activity.trackable.school_name %>

      <div class="clearfix"></div>
      <i class="icon-time" style="margin-top: 06px;"></i>
      <small><%= time_ago_in_words(activity.trackable.start_at) %> ago</small>
    </div>
<% end %>