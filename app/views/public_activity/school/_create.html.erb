<% unless activity.trackable.nil? %>
    <div class="hero-unit" style="padding: 20px; margin-bottom: 20px;width: 200px; line-height: 20px;font-size: 14px;" >
      A school was added to <%= link_to activity.trackable.name, school_path(activity.trackable_id) %>
      <div class="clearfix"></div>
      <i class="icon-time" style="margin-top: 06px;"></i>
      <small><%= time_ago_in_words(activity.trackable.created_at) %> ago</small>
    </div>
<% end %>