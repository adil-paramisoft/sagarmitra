<%= simple_form_for @program_state ,:html=>{:class=>"form-horizontal"} do |f| %>
  <% if @program_state.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@program_state.errors.count, "error") %> prohibited this program_state from being saved:</h2>

      <ul>
      <% @program_state.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>


<fieldset>

<!-- Text input-->
<div class="control-group">
  <label class="control-label" for="textinput">Name</label>
  <div class="controls">
       <%= f.input :name , label: false %>
  </div>
</div>

<!-- Textarea -->
<div class="control-group">
  <label class="control-label" for="textarea">Description</label>
  <div class="controls">                     
      <%= f.input :description ,label: false%>
  </div>
</div>

<!-- Button -->
<div class="control-group">
  <label class="control-label" for="singlebutton"></label>
  <div class="controls">	
		<div class="btn-group">
			<%= f.submit "Submit",:class=>"btn btn-primary" %>
			<%= link_to 'All school Volunteers ',program_states_path,:class=>"btn" %>
			<%= link_to 'cancel', new_program_state_path,:class=>"btn btn-danger" %>
	  	</div>
  </div>
</div>

</fieldset>
<% end %>